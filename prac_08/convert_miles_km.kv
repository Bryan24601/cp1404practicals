BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        size_hint_x: 1.75

        TextInput:
            id: input_text
            text: app.miles
            hint_text: "Enter miles"
            font_size: 30
            multiline: False
            background_color: 1, 1, 1, 1
            foreground_color: 0, 0, 0, 1
            on_text: app.calculate_kilometers
#            on_text: app.handle_text_change(self.text)
            

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Up"
                size_hint: 0.15, 0.1
                height: "40dp"
                on_release: app.handle_increment(1)

            Button:
                text: "Down"
                size_hint: 0.15, 0.1
                height: "40dp"
                on_release: app.handle_increment(-1)

#    Button:
#        text: "Convert miles to km"
#        font_size: 18
#        on_release: app.calculate_kilometers()
#        size_hint_y: None
#        height: "40dp"

    Label:
        id: output_label
        text: app.kilometers
        font_size: 30
        color: 1, 1, 1, 1
